package Othello;

public class Othelloboard {
	private int[][] board;
	private boolean playersTurn; //false = vit(-1), true = svart(1)
	private boolean[][] legalMoves;
	
	public Othelloboard() {
		this.board = new int[8][8];
		setBoard();
		this.playersTurn = true;
		this.legalMoves = new boolean[8][8];
		setLegalMoves();
	}
	//sätter upp bordet
	private void setBoard(){
		for (int i = 0; i < 8; i++){
			for (int j = 0; j < 8; j++){
				this.board[i][j] = 0;
			}
		}
		this.board[3][3] = -1;
		this.board[4][4] = -1;
		this.board[3][4] = 1;
		this.board[4][3] = 1;
	}
	
	//sätter legalMoves i början för svart spelare
	private void setLegalMoves(){
		for (int i = 0; i < 8; i++){
			for (int j = 0; j < 8; j++){
				this.legalMoves[i][j] = false;
			}
		}
		updateLegalMoves(); //ska göra så svart kan lägga på 4 ställen i detta fall.
	}
	
	private void updateLegalMoves(){
		
	}
	
	public boolean[][] legalMoves(){
		return this.legalMoves;
	}
